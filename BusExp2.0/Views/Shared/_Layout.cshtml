<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
   
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only"></span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Creditos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Motoristas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Sobre</a>
                </li>
                <ul class="nav navbar-nav navbar-right">
                    @if (Request.IsAuthenticated)
                    {
                        <li>
                            @Html.ActionLink("Logout", "Logout", "Usuario")
                        </li>
                    }
                    else
                    {
                        <li >
                            @Html.ActionLink("Login", "Login", "Usuario")
                        </li>
                    }
                </ul>
            </ul>
        </div>
    </nav>
     <div>
        @RenderBody()
    </div>

    <footer>
        <hr />
        <p style="text-align:center">
            Desenvolvido por Matheus Martinello, Thomas Pace e Gabriel Alessandro &copy;
            @DateTime.Now.Year
        </p>
    </footer>
</body>
</html>
