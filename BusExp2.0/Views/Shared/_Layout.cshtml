<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="//localhost:62867/Usuario">BusExp</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="//localhost:62867/Usuario">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Features</a>
                    </li>
                    
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    @if (Request.IsAuthenticated)
                    {
                        <li>
                            @Html.ActionLink("Logout", "Logout", "Usuario")
                        </li>
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink("Login", "Login", "Usuario")
                        </li>
                    }
                </form>
            </div>
        </nav>
    <div id="conteudo" class="container"
         style="margin-top:30px;margin-bottom:30px">
        @RenderBody()
    </div>



    <footer>
        <hr />
        <p style="text-align:center">
            Desenvolvido por Matheus Martinello, Thomas Pace e Gabriel Alessandro &copy;
            @DateTime.Now.Year
        </p>
    </footer>
</body>
</html>
