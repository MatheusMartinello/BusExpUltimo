
@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BusExp2._0.Models.Usuario
@using (Html.BeginForm("Login", "Usuario", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <fieldset>
        <legend>Login</legend>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div id="Cpf" class="form-group">
            @Html.LabelFor(model => model.Cpf, new { @class = "control-label col-sm-2" })
            @*@Html.Label("Descrição", new { @class = "control-label col-sm-2" })*@
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Cpf, new { @class = "form-control", @placeholder = "Digite o login do usuário" })
                @Html.ValidationMessageFor(model => model.Cpf, null,
                    new { @class = "text-danger" })
            </div>
        </div>

        <div id="Senha" class="form-group">
            @Html.LabelFor(model => model.Senha, new { @class = "control-label col-sm-2" })
            @*@Html.Label("Valor", new { @class = "control-label col-sm-2" })*@
            <div class="col-sm-10">
                @Html.PasswordFor(model => model.Senha, new { @class = "form-control", @placeholder = "Digite a senha do usuário" })
                @Html.ValidationMessageFor(model => model.Senha, null,
                    new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-primary" type="submit"
                       value="Login" />
            </div>
        </div>
    </fieldset>
}